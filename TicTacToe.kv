#:kivy 1.0.9

<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<TicTacToeGame>:

    canvas:
        Rectangle:
            pos: (self.center_x - (self.center_x / 3)), 0
            size: 10, self.height
        Rectangle:
            pos: (self.center_x + (self.center_x / 3)), 0
            size: 10, self.height
        Rectangle:
            pos: 0, (self.center_y - (self.center_y / 3))
            size: self.width, 10
        Rectangle:
            pos: 0, (self.center_y + (self.center_y / 3))
            size: self.width, 10

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"

